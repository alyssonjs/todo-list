<h1>Listing todo_lists</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Title</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todo_lists.each do |todo_list| %>
  <tr>
    <td><%= todo_list.category %></td>
    <td><%= todo_list.title %></td>
    <td><%= todo_list.position %></td>
    <td><%= link_to 'Show', [todo_list.category, todo_list] %></td>
    <td><%= link_to 'Edit', edit_category_todo_list_path(todo_list.category, todo_list) %></td>
    <td><%= link_to 'Destroy', [todo_list.category, todo_list], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

