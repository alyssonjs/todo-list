      <%= button_to "#", data: { reflex: 'click->TodoList#edit_todo_list', id: @todo_list.id }, class: "btn btn-primary input-group-btn" do %>
          <div style="font-size: 15px; color: white">Ok</div>
      <% end %>
  </div>
</div>
<% end %>
