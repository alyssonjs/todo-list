<h1>Listing categories</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.user %></td>
    <td><%= category.name %></td>
    <td><%= category.position %></td>
    <td><%= link_to 'Show', [category.user, category] %></td>
    <td><%= link_to 'Edit', edit_user_category_path(category.user, category) %></td>
    <td><%= link_to 'Destroy', [category.user, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

