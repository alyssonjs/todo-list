
<div class="row" style="margin-left: 4%">
  <div class="accordion accordion-flush" id="accordionFlushExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="flush-headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
          Crie uma nova lista
        </button>
      </h2>
      <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
        <%= form_for([category, TodoList.new]) do |f| %>
          <div class="input-group ">
              <%= f.text_field :title, data: { reflex: 'change->TodoList#submit', reflex_dataset: "combined" },  class: "form-control form-control-sm", placeholder: "Titulo" %>
              <div class="input-group-append">
                  <%= button_to "#", data: { reflex: 'click->TodoList#create_todo_list', id: category.id }, class: "btn btn-primary input-group-btn", style: "margin-top: 15%" do %>
                      <large style="font-size: 15px; color: white">+</large>
                  <% end %>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <%= render 'todo_lists/todo_lists', category: category%>
</div>
